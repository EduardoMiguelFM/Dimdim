        "metodo": "POST",
        "endpoint": "/transacoes",
        "descricao": "Cria transação de transferência enviada",
        "body": {
          "valor": 250.00,
          "tipo": "TRANSFERENCIA_ENVIADA",
          "descricao": "Transferência para Maria",
          "usuarioId": 1
        }
      },
      "POST_criar_pagamento": {
        "metodo": "POST",
        "endpoint": "/transacoes",
        "descricao": "Cria transação de pagamento",
        "body": {
          "valor": 75.50,
          "tipo": "PAGAMENTO",
          "descricao": "Pagamento de conta de luz",
          "usuarioId": 3
        }
      },
      "PUT_atualizar_transacao": {
        "metodo": "PUT",
        "endpoint": "/transacoes/1",
        "descricao": "Atualiza transação existente",
        "body": {
          "valor": 750.00,
          "tipo": "DEPOSITO",
          "descricao": "Depósito corrigido",
          "usuarioId": 1
        }
      },
      "DELETE_remover_transacao": {
        "metodo": "DELETE",
        "endpoint": "/transacoes/1",
        "descricao": "Remove transação",
        "resposta_sucesso": {
          "message": "Transação removida com sucesso."
        }
      }
    }
  },
  "tipos_transacao": {
    "DEPOSITO": "Adiciona valor ao saldo do usuário",
    "SAQUE": "Remove valor do saldo do usuário",
    "TRANSFERENCIA_ENVIADA": "Remove valor do saldo (transferência enviada)",
    "TRANSFERENCIA_RECEBIDA": "Adiciona valor ao saldo (transferência recebida)",
    "PAGAMENTO": "Remove valor do saldo (pagamento de conta/serviço)",
    "RECEBIMENTO": "Adiciona valor ao saldo (recebimento de pagamento)"
  },
  "codigos_resposta": {
    "200": "Sucesso - Operação realizada com sucesso",
    "201": "Criado - Recurso criado com sucesso",
    "400": "Erro de validação - Dados inválidos ou regra de negócio violada",
    "404": "Não encontrado - Recurso não existe",
    "500": "Erro interno do servidor"
  },
  "exemplos_curl": {
    "criar_usuario": "curl -X POST https://dimdim-api.azurewebsites.net/api/usuarios -H \"Content-Type: application/json\" -d '{\"nome\":\"João Silva\",\"email\":\"joao@email.com\",\"cpf\":\"12345678901\"}'",
    "criar_deposito": "curl -X POST https://dimdim-api.azurewebsites.net/api/transacoes -H \"Content-Type: application/json\" -d '{\"valor\":500.00,\"tipo\":\"DEPOSITO\",\"descricao\":\"Depósito inicial\",\"usuarioId\":1}'",
    "listar_usuarios": "curl -X GET https://dimdim-api.azurewebsites.net/api/usuarios",
    "listar_transacoes_usuario": "curl -X GET https://dimdim-api.azurewebsites.net/api/transacoes/usuario/1"
  }
}
