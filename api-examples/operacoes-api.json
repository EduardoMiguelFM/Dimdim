    "transacoes": {
      "GET_todas_transacoes": {
        "metodo": "GET",
        "endpoint": "/transacoes",
        "descricao": "Lista todas as transações",
        "resposta_exemplo": [
          {
            "id": 1,
            "valor": 500.00,
            "tipo": "DEPOSITO",
            "descricao": "Depósito inicial",
            "usuarioId": 1,
            "nomeUsuario": "João Silva",
            "dataTransacao": "2024-01-01T10:30:00",
            "dataCriacao": "2024-01-01T10:30:00",
            "dataAtualizacao": "2024-01-01T10:30:00"
          }
        ]
      },
      "GET_transacao_por_id": {
        "metodo": "GET",
        "endpoint": "/transacoes/1",
        "descricao": "Busca transação por ID"
      },
      "GET_transacoes_por_usuario": {
        "metodo": "GET",
        "endpoint": "/transacoes/usuario/1",
        "descricao": "Lista transações de um usuário específico"
      },
      "GET_transacoes_paginadas": {
        "metodo": "GET",
        "endpoint": "/transacoes/usuario/1/paginado?page=0&size=10",
        "descricao": "Lista transações de um usuário com paginação"
      },
      "GET_transacoes_por_tipo": {
        "metodo": "GET",
        "endpoint": "/transacoes/tipo/DEPOSITO",
        "descricao": "Lista transações por tipo"
      },
      "GET_ultimas_transacoes": {
        "metodo": "GET",
        "endpoint": "/transacoes/usuario/1/ultimas/5",
        "descricao": "Busca as últimas N transações de um usuário"
      },
      "POST_criar_deposito": {
        "metodo": "POST",
        "endpoint": "/transacoes",
        "descricao": "Cria transação de depósito",
        "body": {
          "valor": 1000.00,
          "tipo": "DEPOSITO",
          "descricao": "Depósito inicial",
