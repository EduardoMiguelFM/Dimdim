            "email": "joao.silva@email.com",
            "cpf": "12345678901",
            "telefone": "(11) 99999-9999",
            "endereco": "Rua das Flores, 123 - São Paulo/SP",
            "saldo": 1000.00,
            "ativo": true,
            "dataCriacao": "2024-01-01T10:00:00",
            "dataAtualizacao": "2024-01-01T10:00:00",
            "transacoes": null
          }
        ]
      },
      "GET_usuario_por_id": {
        "metodo": "GET",
        "endpoint": "/usuarios/1",
        "descricao": "Busca usuário por ID",
