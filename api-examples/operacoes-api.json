        "metodo": "GET",
        "endpoint": "/usuarios/ativos",
        "descricao": "Lista apenas usuários ativos"
      },
      "GET_buscar_por_nome": {
        "metodo": "GET",
        "endpoint": "/usuarios/buscar?nome=João",
        "descricao": "Busca usuários por nome (case insensitive)"
      },
      "GET_usuario_por_email": {
        "metodo": "GET",
        "endpoint": "/usuarios/email/joao.silva@email.com",
        "descricao": "Busca usuário por email"
      },
      "POST_criar_usuario": {
        "metodo": "POST",
        "endpoint": "/usuarios",
